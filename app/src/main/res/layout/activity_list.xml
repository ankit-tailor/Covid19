<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="India"
        android:background="#FF9800"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/newConfirmed"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        android:text="New Confirmed: 16"
        android:paddingBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <TextView
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:id="@+id/totalConfirmed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Total Confirmed: 16"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </LinearLayout>
    <LinearLayout
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:id="@+id/newDeaths"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="New Deaths: 16"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <TextView
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:id="@+id/totalDeaths"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Total Deaths: 16"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:id="@+id/newRecovered"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="New Recovered: 16"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <TextView
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:id="@+id/totalRecovered"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Total Recovered: 16"
            android:paddingTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </LinearLayout>
    </LinearLayout>
</ScrollView>